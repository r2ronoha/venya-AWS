			<label for="inputUsername" class="sr-only"><script>javascript:displayForm("inputUsername",myLangTexts["customer"]["username"])</script></label>

			<input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
			<label for="inputPassword" class="sr-only"><script>javascript:displayForm("inputPassword",myLangTexts["customer"]["password"])</script></label>

			<div class="checkbox">
				<label id="remember"><input type="checkbox" value="remember-me"> <script>javascript:displayMenu("remember",myLangTexts["signin"]["rememberme"])</script></label>
			</div>
			<!-- <input type="submit" value="submit" onclick="signin_check()"/> -->
			<button id="signinButton" class="btn btn-lg btn-primary btn-block" type="button" onclick="signin_check()"><script>javascript:displayForm("signinButton",myLangTexts["signin"]["button"])</script></button>
			<!-- <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button> -->
